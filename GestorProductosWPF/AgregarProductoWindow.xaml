<Window x:Class="GestorProductosWPF.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SorTech - Agregar Nuevo Producto" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#E8F4F8"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilo para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="BlueViolet"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#29B6F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8B979E"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Estilo para botones -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4FC3F7"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#29B6F6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#039BE5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FF8A80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#546E7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4FC3F7" 
            BorderThickness="2" 
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con título y botón cerrar -->
            <Border Grid.Row="0" 
                    Background="#E3E5FD" 
                    CornerRadius="10,10,0,0"
                    Padding="25,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Agregar Nuevo Producto" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#2196F3"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Complete los campos para registrar el producto" 
                                   FontSize="12" 
                                   Foreground="Black"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="✕" 
                            FontSize="20"
                            FontWeight="Bold"
                            Width="35" 
                            Height="35"
                            Background="#E53935"
                            Foreground="#FFFFFF"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="btnCerrar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="17.5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E53935"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62828"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Formulario -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="30,25">
                <StackPanel>
                    <!-- Campo ID -->
                    <TextBlock Text="🆔 ID del Producto *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtId" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             ToolTip="Ingrese un número único para identificar el producto" TextChanged="txtId_TextChanged"/>

                    <!-- Campo Código de Barras -->
                    <TextBlock Text="📊 Código de Barras *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtCodigoBarras" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             ToolTip="Código único del producto (puede ser el mismo que el ID)" TextChanged="txtCodigoBarras_TextChanged"/>

                    <!-- Campo Nombre -->
                    <TextBlock Text="📦 Nombre del Producto *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtNombre" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             ToolTip="Nombre descriptivo del producto"/>

                    <!-- Campo Categoría -->
                    <TextBlock Text="📂 Categoría *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtCategoria" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             TextChanged="txtCategoria_TextChanged"
                             ToolTip="Ej: Electrónica, Ropa, Hogar, etc."/>

                    <!-- Campo Precio -->
                    <TextBlock Text="💰 Precio Unitario *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtPrecio" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             ToolTip="Precio en pesos (solo números)"/>

                    <!-- Campo Stock -->
                    <TextBlock Text="📊 Cantidad en Stock *" 
                               Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="txtStock" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,10"
                             ToolTip="Cantidad disponible en inventario"/>

                    <!-- Nota informativa -->
                    <Border Background="#E3D6CC" 
                            CornerRadius="8" 
                            Padding="15"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="ℹ️ Información Importante" 
                                       Foreground="#8F867C" 
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            <TextBlock Foreground="Black"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       LineHeight="18">
                                <Run Text="• Todos los campos son obligatorios"/>
                                <LineBreak/>
                                <Run Text="• El ID y Código de Barras deben ser únicos"/>
                                <LineBreak/>
                                <Run Text="• El precio debe ser un número positivo"/>
                                <LineBreak/>
                                <Run Text="• El stock debe ser un número entero"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Botones de acción -->
            <Border Grid.Row="2" 
                    Background="#E3E5FD" 
                    CornerRadius="0,0,10,10"
                    Padding="25,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="❌ Cancelar" 
                            Style="{StaticResource SecondaryButton}"
                            Click="btnCancelar_Click"/>

                    <Button Grid.Column="2"
                            Content="✅ Guardar Producto" 
                            Style="{StaticResource PrimaryButton}"
                            Click="btnGuardar_Click_1"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
